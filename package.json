{
  "name": "nostr-social-duck",
  "description": "Nostr Social Graph Analysis library using DuckDB for efficient graph operations",
  "version": "0.1.0",
  "author": "Your Name",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/nostr-social-duck"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --external \"@duckdb/node-bindings-linux-arm64\" --external \"@duckdb/node-bindings-darwin-arm64\" --external \"@duckdb/node-bindings-darwin-x64\" --external \"@duckdb/node-bindings-win32-x64\"",
    "dev": "bun --watch ./src/index.ts",
    "lint": "eslint src/",
    "format": "prettier --write .",
    "test": "bun test"
  },
  "keywords": [
    "nostr",
    "social-graph",
    "duckdb",
    "graph-analysis",
    "decentralized"
  ],
  "license": "MIT",
  "type": "module",
  "types": "dist/index.d.ts",
  "module": "index.ts",
  "devDependencies": {
    "@types/bun": "latest",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.46.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@duckdb/node-api": "^1.4.2-r.1",
    "applesauce-core": "^4.2.0",
    "nostr-tools": "^2.17.2"
  }
}
